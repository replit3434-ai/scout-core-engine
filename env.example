# ==============================
# ⚽ Scout Core Engine - Example ENV
# ==============================

# --- API KEYS ---
SPORTMONKS_API_KEY=your_sportmonks_api_key_here
APISPORTS_API_KEY=your_apisports_api_key_here
FOOTYSTATS_API_KEY=your_footystats_api_key_here

# --- DATABASE CONFIG ---
DATABASE_URL=postgresql://user:password@localhost:5432/scoutdb
SQLITE_URL=sqlite:///scout_cache.db

# --- SERVER CONFIG ---
PORT=5000
NODE_ENV=production
API_UPDATE_INTERVAL=30          # saniye, canlı veri kontrolü
MAX_SIGNALS=20                  # sinyal limiti (override edilebilir)

# --- AI / RL CONFIG ---
RL_ENABLED=true
RL_THRESHOLD=0.74
CONFIDENCE_MIN=65

# --- FALLBACKS & SAFETY ---
USE_INPLAY_FALLBACK=1
USE_FIXTURE_FALLBACK=1
LAST_MINUTE_CACHE_SEC=90
STALE_MINUTE_THRESHOLD_SEC=120

# --- ODDS CONFIG ---
REQUIRE_ODDS=false
MIN_ODDS_FILTER_DISABLED=true
VALUE_MARGIN=0.10
ODDS_HYDRATION_ENABLED=0

# --- LOGGING / DEBUG ---
LOG_LEVEL=info
ENABLE_DEBUG=false
